{
  "agent": {
    "model": "anthropic/claude-opus-4-6"
  },
  "agents": {
    "defaults": {
      "workspace": "workspace",
      "sandbox": {
        "mode": "non-main"
      }
    }
  },
  "channels": {
    "discord": {
      "token": "${DISCORD_BOT_TOKEN}",
      "dmPolicy": "pairing",
      "allowFrom": ["${DISCORD_OWNER_ID}"]
    },
    "slack": {
      "botToken": "${SLACK_BOT_TOKEN}",
      "appToken": "${SLACK_APP_TOKEN}",
      "dmPolicy": "pairing"
    },
    "signal": {
      "phoneNumber": "${SIGNAL_PHONE_NUMBER}"
    }
  },
  "gateway": {
    "bind": "loopback",
    "auth": {
      "mode": "password"
    }
  }
}
